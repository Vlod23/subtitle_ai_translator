@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item mobile-hide-navitem">
        <button type="button" class="btn btn-sm btn-link p-0" data-bs-toggle="modal" data-bs-target="#editUsernameModal" title="Edit username">
            ⚙️
        </button>
    </li>
    <li class="nav-item upload-estimate">
            <a asp-controller="SubtitleManagement" asp-action="MyTranslations" class="nav-link">
                <span>Credits: </span>
                <span class="text-success">@await Component.InvokeAsync("UserCredits")</span> @* <span id="userCredits"> *@
            </a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
